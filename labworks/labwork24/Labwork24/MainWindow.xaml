<Window x:Class="Labwork24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labwork24"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"  Background="LavenderBlush">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="30" Margin="10">
            <TextBlock Text="Введите номер билета: " VerticalAlignment="Center" FontSize="15"/>
            <TextBox x:Name="TicketIdTextBox" Width="50" Height="20" FontSize="15" TextAlignment="Right"/>
            <Button x:Name="SaveTicketButton" Content="Сохранить билет" Margin="2" Click="SaveTicketButton_Click" FontSize="18"/>
        </DockPanel>
        <TextBlock/>
    </DockPanel>
</Window>
