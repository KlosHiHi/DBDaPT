<Window x:Class="LabWork25.FilmsWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork25"
        mc:Ignorable="d"
        Title="Список фильмов" Height="450" Width="800" Loaded="Window_Loaded" Background="Moccasin">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock Text="Выберите дату сеанса" FontSize="15" VerticalAlignment="Center"/>
            <DatePicker x:Name="FilmsDatePicker" Margin="5"/>
            <ComboBox x:Name="CinemaNameComboBox" Margin="5"/>
            <Button x:Name="ShowFilmsByDateButton" Content="Применить" Click="ShowFilteredFilmsButton_Click" Margin="5"/>
            <Button x:Name="ShowAllFilmsButton" Content="Вывести всё" Click="ShowAllFilmsButton_Click" Margin="5"/>
        </DockPanel>
        <DataGrid x:Name="FilmDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="18" DockPanel.Dock="Top" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Время начала сеанса" Binding="{Binding StartDate, StringFormat={}HH:mm dd MMMM}"/>
                <DataGridTextColumn Header="Кинотеатр" Binding="{Binding CinemaName}"/>
                <DataGridTextColumn Header="Номер зала" Binding="{Binding HallNumber}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0} руб.}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ExportButton" Content="Экспорт" Height="30" Width="250" FontSize="18" Click="ExportButton_Click"/>
    </DockPanel>
</Window>
