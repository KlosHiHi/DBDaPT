<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Добавление кадра" Height="300" Width="600" Background="DodgerBlue">
    <DockPanel>
        <Button x:Name="SaveFrame" DockPanel.Dock="Bottom" Content="Сохранить" Height="50" Margin="10" Click="SaveFrame_Click"/>
        <WrapPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20 0 0 0">
            <Image x:Name="FilmFrameImage" Height="100" Width="150" />
            <TextBlock x:Name="FileNameTextBlock" HorizontalAlignment="Center"/>
        </WrapPanel>
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBox x:Name="FilmNameComboBox" Width="300" Height="30" Margin="10"/>
            <Button x:Name="SelectFrameButton" Height="30" Content="Добавить кадр" Click="SelectFrameButton_Click"/>
        </DockPanel>
    </DockPanel>
</Window>
