<Window x:Class="LabWork23.Task2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork23"
        mc:Ignorable="d"
        Title="Task2" Height="450" Width="800" Loaded="Window_Loaded" Background="LightSalmon">
    <DockPanel>
        <Button x:Name="SaveButton" Content="Сохранить" DockPanel.Dock="Bottom" Height="40" Width="400" FontSize="20" Margin="10" Click="SaveButton_Click"/>
        <DockPanel>
            <WrapPanel Orientation="Vertical" DockPanel.Dock="Right" VerticalAlignment="Center">
                <Image x:Name="ShowScreenShotImage" Height="216" Width="384" Margin="10"/>
                <TextBlock x:Name="FileNameTextBlock" HorizontalAlignment="Center"/>
                <Button x:Name="SelectScreenshotButton" Content="Выбрать изображение" Margin="10" Click="SelectScreenshotButton_Click"/>
            </WrapPanel>
            <ComboBox x:Name="GamesComboBox" Width="250" Height="40" VerticalAlignment="Center" FontSize="15" VerticalContentAlignment="Center"/>
        </DockPanel>
    </DockPanel>
</Window>
