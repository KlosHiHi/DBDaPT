@page
@model LabWork17.Pages.Films.IndexModel

@{
    ViewData["Title"] = "Фильмы";
}


<p>
    <a asp-page="Create">Добавить фильм</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].AgeLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].RentalStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].RentalFinish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Film) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalFinish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FilmId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.FilmId">Доп. информация</a> |
                <a asp-page="./Delete" asp-route-id="@item.FilmId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
