@page
@model LabWork17.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Билеты";
}

<h1>Страница с билетами</h1>

<p>
    <a asp-page="Create">Добавить билет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Row)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Seat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Visitor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ticket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Row)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session.SessionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitor.Phone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TicketId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.TicketId">Доп. информация</a> |
                <a asp-page="./Delete" asp-route-id="@item.TicketId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
