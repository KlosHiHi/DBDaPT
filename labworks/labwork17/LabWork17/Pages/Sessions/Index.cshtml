@page
@model LabWork17.Pages.Sessions.IndexModel

@{
    ViewData["Title"] = "Главная";
}

<h1>Главная</h1>
<form method="get" asp-page-handler="Sort">
    <input type="text"
           name="filmTitle"
           value="@Model.FilmTitle"
           placeholder="Поиск..."
           onchange="this.form.submit()"
           class="form-control" />

    <select class="form-control"
            onchange="this.form.submit()"
            name="sortColumn">
        <option value="price" selected="@(Model.SortColumn == "price")">
            По цене (дешевые)
        </option>
        <option value="price_desc" selected="@(Model.SortColumn == "price_desc")">
            По цене (дорогие)
        </option>
    </select>

    <select class="form-control" asp-items="ViewBag.Halls"
            asp-for="Hall"
            name="hall"
            onchange="this.form.submit()">
        <option>
            Все
        </option>
    </select>
</form>

<p>
    <a asp-page="Create">Добавить сеанс</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].IsFilm3d)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Film)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Hall)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Session) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFilm3d)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.NumberName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SessionId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.SessionId">Доп. данные</a> |
                <a asp-page="./Delete" asp-route-id="@item.SessionId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if (Model.PageIndex > 1)
{
    <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)">Назад</a>
}
@Model.PageIndex
@if (Model.PageIndex < Model.TotalPages)
{
    <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)">Вперед</a>
}
