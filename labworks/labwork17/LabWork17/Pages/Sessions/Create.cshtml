@page
@model LabWork17.Pages.Sessions.CreateModel

        @{
        ViewData["Title"] = "Добавление";
        }
        
        <h1>Добавление</h1>
        
    <h4>Сеансы</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.FilmId" class="control-label"></label>
                <select asp-for="Session.FilmId" class ="form-control" asp-items="ViewBag.FilmId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Session.HallId" class="control-label"></label>
                <select asp-for="Session.HallId" class ="form-control" asp-items="ViewBag.HallId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Session.IsFilm3d" class="control-label"></label>
                <input asp-for="Session.IsFilm3d" class="form-control" />
                <span asp-validation-for="Session.IsFilm3d" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
