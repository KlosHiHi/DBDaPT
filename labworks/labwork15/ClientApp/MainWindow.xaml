<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="650" Background="PeachPuff" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0 20 0 0"/>
        </Style>
    </Window.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="WelcomeTextBlock" Text="_, добро пожаловать!"/>
        <Button x:Name="LogOutButton" Content="Выйти" Click="LogOutButton_Click" Grid.Row="1" Grid.RowSpan="2" Width="100"/>

        <StackPanel Grid.Column="1" Margin="10" Orientation="Vertical">
            <Button x:Name="ToPersonalDataButton" Content="Личный кабинет" Click="NoImplementButton_Click"/>
            <Button x:Name="ShowTicketButton" Content="Проверить билеты" Visibility="Collapsed" Click="NoImplementButton_Click"/>
            <Button x:Name="ShowFilmButton" Content="Список фильмов" Visibility="Collapsed" Click="NoImplementButton_Click"/>
            <Button x:Name="AddUserButton" Content="Добавить пользователя" Visibility="Collapsed" Click="NoImplementButton_Click"/>
            <Button x:Name="ToEditUserWindowButton" Content="Редактирование пользователей" Visibility="Collapsed" Click="ToEditUserWindowButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
