<Window x:Class="ClientApp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="UserDataGrid" CanUserAddRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding UserId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" IsReadOnly="True"/>
                <DataGridTextColumn Header="FailTryAuthQuantity" Binding="{Binding FailTryAuthQuantity}"/>
                <DataGridTextColumn Header="UnlockDate" Binding="{Binding UnlockDate}"/>
                <DataGridTextColumn Header="RoleId" Binding="{Binding RoleId}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="1-Администратор, 2-Билетер, 3-Посетитель" FontSize="20" HorizontalAlignment="Center" Grid.Row="1"/>
        <Button x:Name="SaveButton" Content="Сохранить" FontSize="25" Grid.Row="2" Click="SaveButton_Click"/>
    </Grid>
</Window>
